{
  "name": "ricewars",
  "version": "0.0.0",
  "scripts": {
    "start": "node static/dist/server.js",
    "build:dev": "npm run clean && npm run build:dev:server && npm run build:dev:client",
    "build:dev:client": "webpack --config webpack/client.babel.js",
    "build:dev:server": "webpack --config webpack/server.babel.js",
    "build:pro": "npm run clean && npm run build:pro:server && npm run build:pro:client",
    "build:pro:client": "NODE_ENV=production webpack --config webpack/client.babel.js",
    "build:pro:server": "NODE_ENV=production webpack --config webpack/server.babel.js",
    "clean": "rm -rf static/dist",
    "postinstall": "npm run build:dev",
    "lint": "eslint src webpack"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sinapinto/ricewars"
  },
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^6.3.1",
    "babel-core": "^6.3.15",
    "babel-eslint": "^5.0.0-beta6",
    "babel-loader": "^6.2.0",
    "babel-plugin-react-transform": "^2.0.0",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-stage-1": "^6.3.13",
    "babel-register": "^6.4.3",
    "css-loader": "^0.23.1",
    "eslint": "^1.10.3",
    "eslint-config-airbnb": "^5.0.0",
    "eslint-plugin-react": "^3.11.3",
    "expect": "^1.13.4",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.8.5",
    "font-awesome": "^4.5.0",
    "font-awesome-webpack": "0.0.4",
    "less": "^2.6.0",
    "postcss-import": "^8.0.2",
    "postcss-loader": "^0.8.0",
    "react-transform-catch-errors": "^1.0.1",
    "react-transform-hmr": "^1.0.1",
    "redbox-react": "^1.2.0",
    "redux-devtools": "^3.0.1",
    "redux-devtools-dock-monitor": "^1.0.1",
    "redux-devtools-log-monitor": "^1.0.2",
    "style-loader": "^0.13.0",
    "url-loader": "^0.5.7",
    "webpack": "^1.12.9",
    "webpack-dev-middleware": "^1.4.0",
    "webpack-hot-middleware": "^2.6.0"
  },
  "dependencies": {
    "babel-polyfill": "^6.3.14",
    "compression": "^1.6.1",
    "express": "^4.13.3",
    "isomorphic-fetch": "^2.2.1",
    "react": "^0.14.3",
    "react-dom": "^0.14.3",
    "react-redux": "^4.0.6",
    "react-router": "^2.0.0-rc5",
    "redux": "^3.1.2",
    "redux-thunk": "^1.0.3",
    "serve-favicon": "^2.3.0"
  },
  "babel": {
    "presets": [
      "es2015",
      "react",
      "stage-1"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "eslint-config-airbnb",
    "env": {
      "browser": true,
      "node": true
    },
    "globals": {
      "__DEV__": false,
      "__PORT__": 3000,
      "__DISABLE_SSR__": false,
      "__DEVTOOLS__": false
    },
    "rules": {
      "comma-dangle": 0
    }
  }
}
